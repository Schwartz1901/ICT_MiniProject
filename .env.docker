# Docker Environment Configuration
# Copy this to .env when running with docker-compose

# =============================================================================
# Kafka Configuration (Local Docker)
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_USERNAME=
KAFKA_PASSWORD=
KAFKA_TOPIC=data_ingestion

# =============================================================================
# MongoDB Configuration (Local Docker)
# =============================================================================
MONGO_URI=mongodb://admin:admin123@mongodb:27017/Bigdata?authSource=admin
MONGO_DATABASE=Bigdata

# =============================================================================
# Snowflake Configuration (Cloud - update with your credentials)
# =============================================================================
SNOWFLAKE_ACCOUNT=<your-account>.<region>
SNOWFLAKE_USER=<your-username>
SNOWFLAKE_PASSWORD=<your-password>
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=RAW_DB
SNOWFLAKE_SCHEMA=LANDING

# =============================================================================
# Ingestion Configuration
# =============================================================================
MAX_INGESTION_RECORDS=10000
INGESTION_WORKERS=16

# =============================================================================
# Bronze Layer Configuration
# =============================================================================
BRONZE_BATCH_SIZE=100
BRONZE_WORKERS=16
